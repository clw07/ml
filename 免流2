# 代理提供商配置 (保留原有)
proxy-providers:
  免流:
    <<: *p
    type: http
    url: "https://carpetpacific.com/blanket/api/v1/client/subscribe?token=7f007832156bcb4bba240bdec9593e85&host=space.dingtalk.com"
